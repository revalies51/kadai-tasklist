<div class="row">
  <div class="col-xs-6 col-sm-offset-2 col-sm-8 col-lg-offset-3 col-lg-6">
    <%= form_for(task) do |f| %>
      <% if task.errors.any? %>
        <div id="error_explanation">
          <ul>
            <% task.errors.full_messages.each do |task| %>
              <li><%= task %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
    
    <table class="table table-bordered">
      <tr>
      <th class="text-center"><%= f.label :status, 'ステータス' %></th>
      <th class="text-center"><%= f.text_field :status %></th>
      </tr>
      
      <tr>
      <th class="text-center"><%= f.label :content, 'タスク' %></th>
      <th class="text-center"> <%= f.text_field :content %></th>
      </tr>
      </table>
    
      <%= f.submit '投稿' %>
    <% end %>
  </div>
</div>